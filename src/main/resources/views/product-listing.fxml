<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.commerce.controllers.ProductListingController"
            styleClass="root">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            
            <Text text="Smart E-Commerce" styleClass="app-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label fx:id="welcomeLabel" text="Welcome!" styleClass="welcome-text"/>
            
            <Button text="Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
        </HBox>
    </top>
    
    <!-- Main Content Area -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            
            <!-- Page Header -->
            <VBox spacing="10">
                <Text text="Browse Products" styleClass="page-title"/>
                <Text text="Discover amazing products from our collection" styleClass="page-subtitle"/>
            </VBox>
            
            <!-- Filters Section -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filters-bar">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                
                <Label text="Filter:" styleClass="filter-label"/>
                
                <ComboBox fx:id="categoryFilter" promptText="Select Category" 
                         styleClass="filter-combo" prefWidth="200"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Label text="Search:" styleClass="filter-label"/>
                <TextField fx:id="searchField" promptText="Search products..." 
                          styleClass="search-field" prefWidth="300"/>
            </HBox>
            
            <!-- Products Grid -->
            <ScrollPane fitToWidth="true" styleClass="products-scroll" VBox.vgrow="ALWAYS">
                <FlowPane fx:id="productsContainer" 
                         hgap="20" vgap="20" 
                         styleClass="products-grid"
                         prefWrapLength="1200">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </FlowPane>
            </ScrollPane>
        </VBox>
    </center>
    
</BorderPane>
